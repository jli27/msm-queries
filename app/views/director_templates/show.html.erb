<h1>Director #<%= @a_id %> details</h1>

<a href "/directors">Go back</a>

<hr>

<dl>
  <dt>Name<dt>
  <dd><%= @a_director.name %></dd>
  <dt>Dob</dt>
  <dd><%= @a_director.dob %></dd>
  <dt>Bio</dt>
  <dd><%= @a_director.bio %></dd>
  <dt>Image</dt>
  <dd><img src = "<%= @a_director.image %>" width = "300"></dd>

  <dt>Created at</dt>
  <dd><%= @a_director.created_at %></dd>

  <dt>Updated at</dt>
  <dd><%= @a_director.updated_at %></dd>
</dl>

<hr>

<h2>Filmography</h2>

<table border="1">
  <tr>
    <th>ID</th>
    <th>Image</th>
    <th>Title</th>
    <th>Year</th>
    <th>Director</th>
    <th></th>
  </tr>

  <% @matching_movies.all.each do |this_movie| %>
    <tr>
      <td><%= this_movie.id %></td>
      <td>
        <img src = "<%= this_movie.image %>" width = "200">
      </td>
      <td><%= this_movie.title %></td>
      <td><%= this_movie.year %></td>
      <td><%= @a_director.name %></td>
      <td><a href = "/movies/<%= this_movie.id %>">Show details</a></td> 
    </tr>
  <% end %>

</table>
