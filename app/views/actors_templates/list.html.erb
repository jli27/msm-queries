<h1>List of all actors</h1>

<table border="1">
  <tr>
    <th>ID</th>
    <th>Image</th>
    <th>Name</th>
    <th>Dob</th>
    <th></th>
  </tr>

  <% Actor.all.each do |this_actor| %>
    <tr>
      <td><%= this_actor.id %></td>
      <td>
        <img src = "<%= this_actor.image %>" width = "200">
      </td>
      <td><%= this_actor.name %></td>
      <td><%= this_actor.dob %></td>
      <td><a href = "/actors/<%= this_actor.id %>">Show details</a></td> 
    </tr>
  <% end %>

</table>
